<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/number_input"
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:layout_marginTop="72dp"
        android:hint="@string/prompt"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/again_btn"
        android:layout_width="266dp"
        android:layout_height="78dp"
        android:layout_marginTop="20dp"
        android:text="@string/again"
        app:layout_constraintStart_toStartOf="@+id/guess_prompt"
        app:layout_constraintTop_toBottomOf="@+id/guess_prompt" />

    <TextView
        android:id="@+id/guess_prompt"
        android:layout_width="266dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/number_input"
        app:layout_constraintTop_toBottomOf="@+id/number_input" />

</androidx.constraintlayout.widget.ConstraintLayout>