<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/transformG"
        android:layout_width="340dp"
        android:layout_height="73dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/m2f_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:checked="true"
            android:text="@string/m2f" />

        <RadioButton
            android:id="@+id/f2m_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/f2m" />
    </RadioGroup>

    <EditText
        android:id="@+id/input_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="@string/prompt"
        app:layout_constraintStart_toStartOf="@+id/transformG"
        app:layout_constraintTop_toBottomOf="@+id/transformG" />

    <TextView
        android:id="@+id/showResult"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/input_val"
        app:layout_constraintTop_toBottomOf="@+id/input_val" />
</androidx.constraintlayout.widget.ConstraintLayout>